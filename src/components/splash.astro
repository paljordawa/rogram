---
import { Image } from "astro:assets";
import myImage from "../assets/rogram-logo-md.svg"; // Image is 1600x900
import myImageBig from "../assets/rogram-logo-md-gradient.svg";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";

const widths = [250, 200];
const sizes = "(min-width: 440px) 36vw, 56vw";
---

<section class="relative h-full bg-black">
  <Starfield />
 
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative  h-full place-items-center sm:grid-cols-3">
    <h2
      class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
    >
    <div class="">
      <Image src={myImageBig} alt="A description of my image." class="size-20 mt-60" id="logo"/>
    </div>
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-8xl "
      >
        Rogram
        <br /> is coming soon,
        <br /> Closer to you.
       
      </div>
    </h2>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #logo {
    animation: float ease-in .5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
